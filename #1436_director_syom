#영화감독 숌(문자x)
#1씩 더하여 각각 '666'이 포함 되는가? 
def end(n, end_num):
  end_n = 10665
  i = 19
  while i < n:
    end_n += 1
    if '666' in str(end_n):
      i += 1
  print(end_n)

#입력
n = int(input())
#19개
end_num = [666,1666,2666,3666,4666,5666
           ,6660,6661,6662,6663,6664,6665,6666
           ,6667,6668,6669,7666,8666,9666]
if n <= 19:#예외처리
  print(end_num[n-1])
else:
  end(n, end_num)
